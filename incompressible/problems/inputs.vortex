# simple inputs files for the unsplit CTU hydro scheme

[driver]
max_steps = 2000
tmax = 1.0
cfl = 0.8


[incompressible]

[vis]

dovis = 1
store_images = 1

[io]
basename = vortex_a0_
n_out = 1


[mesh]
nx = 64
ny = 64
xmin = -0.5
xmax = 0.5
ymin = -0.5
ymax = 0.5

xlboundary = periodic
xrboundary = periodic

ylboundary = periodic
yrboundary = periodic

[vortex]
delta_s = 0.0
